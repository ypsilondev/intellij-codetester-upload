<idea-plugin>
    <id>com.github.yniklas.intellijcodetesterupload</id>
    <name>intellij-codetester-upload</name>
    <vendor>ypsilon</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.yniklas.intellijcodetesterupload.services.MyApplicationService"/>
        <toolWindow id="CodeTester" secondary="false" anchor="right" factoryClass="com.github.yniklas.intellijcodetesterupload.toolwindow.ToolwindoFactory"/>
        <projectService serviceImplementation="com.github.yniklas.intellijcodetesterupload.services.MyProjectService"/>
    </extensions>

</idea-plugin>
